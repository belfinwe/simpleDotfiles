#!/bin/bash
# Before use, add the following to ".bashrc".
# if [ -f xx/.alias ]; then
# . xx/.alias
# fi
#
# Replace "xx/.alias" with your filepath


# Custom aliases

# Navigation
alias cd.="cd .."
alias cdd="cd ~/Documents/"
alias cdg="cd ~/git/"

alias ll.="ll .."
alias lls="ls -alCF"

# Bash
alias bashre="source ~/.bashrc"

# Git
alias ggl="git pull"
alias ggs="git push"

# Other
alias katta="cat ~/git/simpleDotfiles/.alias"

# Programs
## Clock
## Install tty-clock if not already installed
if ! [ -x "$(command -v tty-clock)" ]; then
    echo 'Error: tty-clock is not installed. Enter sudo password to install (apt)' >&2
    sudo apt-get install tty-clock
    exit 1
fi
alias kl="tty-clock -cs"
