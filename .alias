#
# Replace "~/git/simpleDotfiles/.alias" with your filepath if needed.


# Custom aliases

# Navigation
alias cd.="cd .."
alias cdd="cd ~/Documents/"
alias cdg="cd ~/git/"

alias ll="ls -alF" # List all files and directories
alias l="ls -AlCF" # As with ll, but show in column
alias ll.="ll .." # ll, but for parent directory
#alias lls="ls -alCF" # Replaced by l

# Bash
alias bashre="source ~/.bashrc" # Restarts bash

# Git
alias ggl="git pull"
alias ggs="git push"

# Other
alias katta="cat ~/git/simpleDotfiles/.alias" # View .alias file content
alias kl="tty-clock -cs" # Termianl clock

# Run dotfiles
#alias runDot=". ~/git/simpleDotfiles/.programs" # May not need anymore?
