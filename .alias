#!/bin/bash
# Before use, add the following to "~/.bashrc".
# if [ -f ~/git/simpleDotfiles/.alias ]; then
# . ~/git/simpleDotfiles/.alias
# fi
#
# Replace "~/git/simpleDotfiles/.alias" with your filepath if needed.

# ############## #
# Custom aliases #
# ############## #

# Navigation
alias cd.="cd .."
alias cdd="cd ~/Documents/"
alias cdg="cd ~/git/"

# Views
## ls views
alias ll="ls -lhF" # List files and directories
alias la="ls -AlhF" # List all files and directories
alias l="ls -alhF" # List all files and directories
alias lc="ls -CF" # As with ll, but in columns
alias lq="ls -aCF" # As with la, but show in columns
alias ll.="ll .." # ll, but for parent directory
#alias lls="ls -alCF" # Replaced by l
#alias ls=ls -F  # Normal ls, but with classification

## tree views
# alias tt="tree"
alias tta="tree -a" # All files
alias tt="tree -d" # Directories

# Bash
alias bashre="source ~/.bashrc" # Restarts bash

# Git
alias ggl="git pull"
alias ggs="git push"
alias gits="git status"

# Other
alias katta="cat ~/git/simpleDotfiles/.alias" # View .alias file content
alias kl="tty-clock -cs" # Terminal clock

# Run dotfiles
#alias runDot=". ~/git/simpleDotfiles/.programs" # May not be need anymore?
